@model KingShipper.Models.ResponseModel<KingShipper.Entity.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="graph-visual tables-main">
    <h2 class="inner-tittle">Table category</h2>
    <div class="graph">
        <div class="tables">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            <a href="@Url.Action("Add")">Add</a>
                        </th>
                    </tr>
                    <tr>
                        <th>STT</th>
                        <th>Tên</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @{   var i = 1;}
                    @if (Model.DataList != null && Model.DataList.Count > 0)
                    {
                        foreach (var item in Model.DataList)
                        {
                            <tr>
                                <th scope="row">@i</th>
                                <td>@item.Name</td>
                                <td><a href="@Url.Action("Delete", @item.Id)">Delete | </a> <a href="@Url.Action("Update", @item.Id)">Update</a></td>
                            </tr>
                            i++;
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
